<body class="hold-transition register-page">
  <div class="register-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <a href="/" class="h1">Phan mem <b>F8</b></a>
      </div>
      <div class="card-body">
        <p class="login-box-msg">Update class <%= class1.name %></p>

        <form action="" method="post">
          <!-- Make sure to set the correct action URL -->
          <p>Tên</p>
          <div class="input-group mb-3">
            <input
              type="text"
              class="form-control"
              placeholder="Name"
              name="name"
              value="<%= class1.name %>"
              required
            />
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-user"></span>
              </div>
            </div>
          </div>
          <p>Số buổi học</p>
          <div class="input-group mb-3">
            <input
              type="number"
              class="form-control"
              placeholder="So buoi hoc"
              name="quantity"
              value="<%= class1.quantity %>"
              required
            />
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <p>Ngay khai giang</p>
          <div class="input-group mb-3">
            <input type="date" class="form-control" placeholder="Start Date,
            (end date auto calculate)" value="<%=
            moment(class1.startDate).format("YYYY-MM-DD") %>" name="startDate"
            />
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-calendar"></span>
              </div>
            </div>
          </div>
          <p>Lich hoc</p>
          <div class="input-group mb-3">
            <label class="input-group-text"
              ><span class="fas fa-calendar"></span
            ></label>
            <div
              class="form-control"
              id="selected-days"
              style="height: auto; min-height: 100px; overflow-y: auto"
            >
              <% if(class1.schedule == null) { class1.schedule="" }%>
              <label
                ><input type="checkbox" name="schedule" value="Monday" <%
                if(class1.schedule.includes("Monday")){%> checked <% } %>>
                Monday</label
              >
              <label
                ><input type="checkbox" name="schedule" value="Tuesday" <%
                if(class1.schedule.includes("Tuesday")){%> checked <% } %> />
                Tuesday</label
              >
              <label
                ><input type="checkbox" name="schedule" value="Wednesday" <%
                if(class1.schedule.includes("Wednesday")){%> checked <% } %> />
                Wednesday</label
              >
              <label
                ><input type="checkbox" name="schedule" value="Thursday" <%
                if(class1.schedule.includes("Thursday")){%> checked <% } %> />
                Thursday</label
              >
              <label
                ><input type="checkbox" name="schedule" value="Friday" <%
                if(class1.schedule.includes("Friday")){%> checked <% } %> />
                Friday</label
              >
              <label
                ><input type="checkbox" name="schedule" value="Saturday" <%
                if(class1.schedule.includes("Saturday")){%> checked <% } %> />
                Saturday</label
              >
              <label
                ><input type="checkbox" name="schedule" value="Sunday" <%
                if(class1.schedule.includes("Sunday")){%> checked <% } %> />
                Sunday</label
              >
             
            </div>
          </div>

          <p>Thời gian học</p>
          <div class="input-group mb-3">
            <input
              type="text"
              class="form-control"
              placeholder="Learn Time (gio bat dau va gio ket thuc)"
              name="timeLearn"
              value="<%= class1.timeLearn %>"
            />
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-hourglass"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-8"></div>
            <!-- /.col -->
            <div class="col-4">
              <button type="submit" class="btn btn-primary btn-block">
                Update
              </button>
            </div>
            <!-- /.col -->
          </div>
        </form>
      </div>
      <!-- /.form-box -->
    </div>
    <!-- /.card -->
  </div>
</body>
