<div class="container">
  <h1 class="mt-5 mb-4">Update Student Detail</h1>

  <form action="" method="POST">
    <div class="form-group">
      <label for="studentName">Student Name:</label>
      <input type="text" id="studentName" name="studentName" class="form-control" value="<%= studentDetail.User.name %>" readonly>
    </div>

    <div class="form-group">
      <label for="learningStatus">Learning Status:</label>
      <select id="learningStatus" name="learningStatus" class="form-control">
        <% learningStatuses.forEach(status => { %>
        <option value="<%= status.id %>" <%= studentDetail.LearningStatus.id === status.id ? 'selected' : '' %>><%= status.name %></option>
        <% }); %>
      </select>
    </div>

    <div class="form-group">
      <label for="completedDate">Completed Date:</label>
      <input type="date" id="completedDate" name="completedDate" class="form-control" value="<%= moment(studentDetail.completedDate).format('YYYY-MM-DD') %>">
    </div>

    <div class="form-group">
      <label for="dropDate">Drop Date:</label>
      <input type="date" id="dropDate" name="dropDate" class="form-control" value="<%= moment(studentDetail.dropDate).format('YYYY-MM-DD') %>">
    </div>

    <div class="form-group">
      <label for="recoverDate">Recover Date:</label>
      <input type="date" id="recoverDate" name="recoverDate" class="form-control" value="<%= moment(studentDetail.recoverDate).format('YYYY-MM-DD') %>">
    </div>

    <button type="submit" class="btn btn-primary">Update Student Detail</button>
  </form>
</div>